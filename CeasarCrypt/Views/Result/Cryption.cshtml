@{
    ViewBag.Title = "Зашифровка";
}

<div class="container p-5">
    <h2>Результаты зашифровки</h2><hr />
    <h4>Текст был зашифрован с ключом <strong>@ViewBag.Key</strong></h4>
    @using (Html.BeginForm("Download", "Cryption", FormMethod.Post))
    {
        <textarea type="text" name="text" rows="5" class="textarea-readonly" readonly>@ViewBag.Text</textarea>
        <h3 class="pb-2">Вы можете скачать результат:</h3>
        <input name="fileName" type="hidden" value="@ViewBag.FileName">
        <button class="btn btn-success btn-lg" type="submit">Скачать</button>
    }
</div>